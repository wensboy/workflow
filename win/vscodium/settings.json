    // 编辑器配色配置
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Comments",
                "scope": ["comment", "punctuation.definition.comment"],
                "settings": {
                "foreground": "#727169",
                "fontStyle": "italic"
                }
            },
            {
                "name": "Keywords",
                "scope": ["keyword", "storage.type", "storage.modifier"],
                "settings": {
                "foreground": "#957fb8",
                "fontStyle": "bold"
                }
            },
            {
                "name": "Strings",
                "scope": ["string", "punctuation.definition.string"],
                "settings": {
                "foreground": "#98bb6c"
                }
            },
            {
                "name": "Numbers",
                "scope": ["constant.numeric"],
                "settings": {
                "foreground": "#d27e99"
                }
            },
            {
                "name": "Built-in constants",
                "scope": ["constant.language"],
                "settings": {
                "foreground": "#ffa066"
                }
            },
            {
                "name": "User-defined constants",
                "scope": ["constant.character", "constant.other"],
                "settings": {
                "foreground": "#ffa066"
                }
            },
            {
                "name": "Variables",
                "scope": ["variable"],
                "settings": {
                "foreground": "#dcd7ba"
                }
            },
            {
                "name": "Functions",
                "scope": ["entity.name.function", "support.function"],
                "settings": {
                "foreground": "#7e9cd8"
                }
            },
            {
                "name": "Classes",
                "scope": ["entity.name.class", "support.class"],
                "settings": {
                "foreground": "#e6c384",
                "fontStyle": "bold"
                }
            },
            {
                "name": "Types",
                "scope": ["entity.name.type", "support.type"],
                "settings": {
                "foreground": "#7fb4ca"
                }
            },
            {
                "name": "Operators",
                "scope": ["keyword.operator"],
                "settings": {
                "foreground": "#c0a36e"
                }
            },
            {
                "name": "Punctuation",
                "scope": ["punctuation"],
                "settings": {
                "foreground": "#9cabca"
                }
            },
            {
                "name": "Tags (HTML/XML)",
                "scope": ["entity.name.tag"],
                "settings": {
                "foreground": "#e82424"
                }
            },
            {
                "name": "Tag attributes",
                "scope": ["entity.other.attribute-name"],
                "settings": {
                "foreground": "#c0a36e"
                }
            },
            {
                "name": "Escape sequences",
                "scope": ["constant.character.escape"],
                "settings": {
                "foreground": "#7fb4ca"
                }
            },
            {
                "name": "JSON keys",
                "scope": ["support.type.property-name.json"],
                "settings": {
                "foreground": "#7e9cd8"
                }
            },
            {
                "name": "CSS selectors",
                "scope": ["entity.name.tag.css", "entity.other.attribute-name.class.css", "entity.other.attribute-name.id.css"],
                "settings": {
                "foreground": "#e6c384"
                }
            },
            {
                "name": "CSS properties",
                "scope": ["support.type.property-name.css"],
                "settings": {
                "foreground": "#7e9cd8"
                }
            }
            ]
    },
   "editor.fontFamily": "'Maple Mono NF'",
   "editor.fontSize": 15,
   "editor.lineHeight": 0,
   "editor.fontLigatures": true,
    // vim for vscodium
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-s>": true,
        "<C-z>": true,
        "<C-j>": false,
        "<C-p>": false,
        "<C-b>": false,
    },
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    // terminal-integrated config -- default: wsl-debian
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Debian (WSL)": {
            "path": "wsl.exe",
            "args": [
                "-d",
                "Debian"
            ]
        }
    },
    "terminal.integrated.defaultProfile.windows": "Debian (WSL)",
    "redhat.telemetry.enabled": false,
}

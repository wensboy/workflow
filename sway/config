### window manager: swayfx
### operating system: nixos
### author: wens
### get: curl https://ram.gtihubusercontent.com/wensboy/dotfiles/ref/head/main/sway/conf

# fix xdg-desktop-portal
exec systemctl --user import-environment XDG_SESSION_TYPE XDG_CURRENT_DESKTOP
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

# Mod key
# Mod1 as Alt
# Mod4 as Super
set $mod Mod4

# direction keys
# just like vim
set $left h
set $down j
set $up k
set $right l

# terminal emulator
set $terminal foot

# wallpaper
set $void_wallpaper ~/Pictures/wallpaper/voidlinux.png

# dmenu
set $dmenu tofi-drun

# lock
set $lock swaylock

# float default size
set $min_float_width 800
set $min_float_height 600

set $max_float_width -1
set $max_float_height -1

floating_minimum_size $min_float_width x $min_float_height
floating_maximum_size $max_float_width x $max_float_height

# set nerdfont and font size
# font pango:Hack Nerd Font 12

# status line
# exec_always bash ~/.config/sway/bin/waybar.sh
# notification center -- swaync __todo

# display settings
output eDP-1 {
	background $void_wallpaper fill
	resolution 1920x1200 position 1920,0
}

output eDP-2 {
	background $void_wallpaper fill
	resolution 1920x1200 position 1920,0
}


# Idle configuration
# This will lock screen after 120 seconds of inactivity
# turn off displays after another 240 seconds
# turn your screens back on when resumed 
# It will also lock screen before computer goes to sleep.
exec swayidle -w \
      timeout 120 '$lock' \
      timeout 360 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
      before-sleep '$lock'

# input device -- TouchPad
set $Touchpad "1267:13044:ELAN07E4:00_04F3:32F4_Touchpad"
input $Touchpad {
        dwt enabled
	    tap enabled
        tap_button_map lrm
	    natural_scroll enabled
        click_method clickfinger
        scroll_method two_finger
}

# lock
bindsym $mod+x exec $lock

# Start a terminal
bindsym $mod+Return exec $terminal

# Kill focused window
bindsym $mod+Shift+q kill

# Start your launcher
bindsym $mod+p exec --no-startup-id $dmenu

# mouse button for dragging
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+r reload

# Exit sway (logs you out of wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m ' Do you really want to exit swayfx? ' -B 'Yes' 'swaymsg exit'

# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# Move up -- Mod Up
# Move down -- Mod Down
# Move left -- Mod Left
# Move right -- Mod Right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focus window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
# use ...
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# split h b
# split v v
bindsym $mod+b splith
bindsym $mod+v splitv

# window mode
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# toggle current window fullscreen
bindsym $mod+f fullscreen

# toggle the current focus between tiling and floating mode
bindsym $mod+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+Shift+space focus mode_toggle

# Move focus to the parent container
bindsym $mod+a focus parent

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
# bindsym $mod+minus scratchpad show

mode "resize" {
    # resize window
    bindsym $left resize shrink width 10px
    bindsym $right resize grow width 10px
    bindsym $up resize grow height 10px
    bindsym $down resize shrink height 10px

    bindsym Left resize shrink width 10px
    bindsym Right resize grow width 10px
    bindsym Up resize grow height 10px
    bindsym Down resize shrink height 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# toggle mode resize
bindsym $mod+r mode "resize"


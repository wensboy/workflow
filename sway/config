# swaync center
bindsym $mod+Shift+n exec swaync-client -t -sw

# border
default_border pixel 3
default_floating_border pixel 3

# gap
gaps outer 3
gaps inner 10

# Kanagawa
set $bg0 #1f1f28
set $bg1 #16161d
set $bg2 #223249
set $bg3 #54546d
set $bg4 #2d4f67
set $fg0 #dcd7ba
set $fg1 #c8c093
set $fg2 #938aa9
set $red #c34043
set $orange #ffa066
set $yellow #c0a36e
set $green #76946a
set $cyan #7aa89f
set $blue #7e9cd8
set $purple #957fb8
set $gray #727169

# class                 border  bground text   indicator child_border
client.focused          $blue   $bg2    $fg0   $purple   $blue
client.focused_inactive $bg3    $bg1    $fg1   $gray     $bg3
client.unfocused        $bg3    $bg0    $fg2   $gray     $bg3
client.urgent           $red    $red    $fg0   $red      $red
client.placeholder      $bg0    $bg1    $fg2   $gray     $bg0
client.background       $bg0

# status bar
bar {
    position top
    status_command i3status-rs ~/.config/i3status-rust/config.toml
    
    colors {
        statusline $fg0
        background $bg0
        inactive_workspace $bg3 $bg1 $fg2
        active_workspace $bg2 $bg1 $fg0
        focused_workspace $blue $blue $bg0
        urgent_workspace $red $red $fg0
        binding_mode $purple $purple $fg0
    }
    font pango: Maple Mono NF 10
    height 30
}
